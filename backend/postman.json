{
  "info": {
    "name": "Simple Banking API",
    "description": "Complete API collection for Simple Banking application with user management, account operations, and transaction processing",
    "_postman_id": "e1c7c0b2-9f9a-4d9c-9f0f-2a6a3f7c6b0a",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "item": [
    {
      "name": "Users",
      "description": "User management endpoints for registration, authentication, and user operations",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Johnson\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "description": "Register a new user in the system"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "description": "Authenticate a user with email and password"
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users"
              ]
            },
            "description": "Retrieve all users in the system"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "{{userId}}"
              ]
            },
            "description": "Delete a user by ID"
          }
        }
      ]
    },
    {
      "name": "Accounts",
      "description": "Account management endpoints for creating and retrieving accounts",
      "item": [
        {
          "name": "Create Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user\": { \"id\": 1 },\n  \"balance\": 1000.00\n}"
            },
            "description": "Create a new account for a user with optional initial balance"
          }
        },
        {
          "name": "Get Account By Id",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts/{{accountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "{{accountId}}"
              ]
            },
            "description": "Retrieve a specific account by its ID"
          }
        },
        {
          "name": "Get All Accounts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts"
              ]
            },
            "description": "Retrieve all accounts in the system"
          }
        },
        {
          "name": "Get Accounts By User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts/user/{{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "user",
                "{{userId}}"
              ]
            },
            "description": "Retrieve all accounts belonging to a specific user"
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "description": "Transaction endpoints for deposits, withdrawals, transfers, and transaction history",
      "item": [
        {
          "name": "Deposit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/transactions/deposit",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "transactions",
                "deposit"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountId\": 1,\n  \"amount\": 500.00,\n  \"description\": \"Salary deposit\"\n}"
            },
            "description": "Deposit money into an account"
          }
        },
        {
          "name": "Withdraw",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/transactions/withdraw",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "transactions",
                "withdraw"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountId\": 1,\n  \"amount\": 200.00,\n  \"description\": \"ATM withdrawal\"\n}"
            },
            "description": "Withdraw money from an account (requires sufficient balance)"
          }
        },
        {
          "name": "Transfer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/transactions/transfer",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "transactions",
                "transfer"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountId\": 1,\n  \"toAccountId\": 2,\n  \"amount\": 300.00,\n  \"description\": \"Payment to friend\"\n}"
            },
            "description": "Transfer money between two accounts"
          }
        },
        {
          "name": "Get Transaction History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/transactions/account/{{accountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "transactions",
                "account",
                "{{accountId}}"
              ]
            },
            "description": "Retrieve all transactions for a specific account"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "1",
      "type": "string"
    }
  ]
}